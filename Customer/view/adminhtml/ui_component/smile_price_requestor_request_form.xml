 * @package   Smile\Customer
 * @author    Tetiana Lebed <teleb@smile.fr>
 * @copyright 2019 Smile
 */
-->
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">smile_price_requestor_request_form.smile_price_requestor_request_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Price Request Information</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="save" class="Smile\Customer\Block\Adminhtml\Request\Edit\SaveButton"/>
            <button name="send_email" class="Smile\Customer\Block\Adminhtml\Request\Edit\SendButton"/>
            <button name="back" class="Smile\Customer\Block\Adminhtml\Request\Edit\BackButton"/>
        </buttons>
        <namespace>smile_price_requestor_request_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>smile_price_requestor_request_form.smile_price_requestor_request_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="smile_price_requestor_request_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="smile_price_requestor/request/save"/>
        </settings>
        <dataProvider class="Smile\Customer\Model\Request\DataProvider" name="smile_price_requestor_request_form_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general">
        <settings>
            <label/>
        </settings>
        <field name="name">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">request</item>
                    <item name="sortOrder" xsi:type="string">10</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">User Name</item>
                    <item name="dataScope" xsi:type="string">name</item>
                    <item name="disabled" xsi:type="boolean">true</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="email">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">request</item>
                    <item name="sortOrder" xsi:type="string">20</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">User e-mail</item>
                    <item name="dataScope" xsi:type="string">email</item>
                    <item name="disabled" xsi:type="boolean">true</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                        <item name="validate-email" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="product_sku">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">request</item>
                    <item name="sortOrder" xsi:type="string">30</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Product Sku</item>
                    <item name="dataScope" xsi:type="string">product_sku</item>
                    <item name="disabled" xsi:type="boolean">true</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="comment">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">request</item>
                    <item name="sortOrder" xsi:type="string">40</item>
                    <item name="formElement" xsi:type="string">textarea</item>
                    <item name="dataType" xsi:type="string">textarea</item>
                    <item name="label" xsi:type="string" translate="true">Request Comment</item>
                    <item name="dataScope" xsi:type="string">comment</item>
                    <item name="disabled" xsi:type="boolean">true</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="status">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">comment</item>
                    <item name="sortOrder" xsi:type="string">50</item>
                    <item name="dataType" xsi:type="string">select</item>
                    <item name="label" xsi:type="string" translate="true">Status</item>
                    <item name="dataScope" xsi:type="string">status</item>
                    <item name="formElement" xsi:type="string">select</item>
                </item>
                <item name="options" xsi:type="object">Smile\Customer\Model\Request\Source\Status</item>
            </argument>
        </field>
        <field name="answer">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">request</item>
                    <item name="sortOrder" xsi:type="string">60</item>
                    <item name="formElement" xsi:type="string">textarea</item>
                    <item name="dataType" xsi:type="string">textarea</item>
                    <item name="label" xsi:type="string" translate="true">Request Answer</item>
                    <item name="dataScope" xsi:type="string">answer</item>
                </item>
            </argument>
        </field>
    </fieldset>
</form>
