    <preference for="Smile\PriceRequestor\Api\Data\RequestSearchResultsInterface" type="Magento\Framework\Api\SearchResults" />
    <preference for="Smile\PriceRequestor\Api\RequestRepositoryInterface" type="Smile\PriceRequestor\Model\RequestRepository" />

    <type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
