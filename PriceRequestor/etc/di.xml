                <item name="smile_price_requestor_request_listing_data_source" xsi:type="string">Smile\PriceRequestor\Model\ResourceModel\Request\Grid\Collection</item>
            </argument>
        </arguments>
    </type>
    <type name="Smile\PriceRequestor\Model\ResourceModel\Request\Grid\Collection">
