                    <item name="identifierField" xsi:type="string">id</item>
                </item>
            </argument>
        </arguments>
    </type>
    <type name="Magento\Framework\EntityManager\HydratorPool">
        <arguments>
            <argument name="hydrators" xsi:type="array">
                <item name="Smile\PriceRequestor\Api\Data\RequestInterface" xsi:type="string">Magento\Framework\EntityManager\AbstractModelHydrator</item>
