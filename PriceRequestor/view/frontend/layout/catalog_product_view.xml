<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="product.info.price">
            <block name="price.requestor" class="Magento\Framework\View\Element\Template" template="Smile_PriceRequestor::product/view/price_requestor.phtml" before="-">
                <block name="request.form" as="request_form" class="Magento\Framework\View\Element\Template" template="Smile_PriceRequestor::forms/request_form.phtml" />
                <arguments>
                    <argument name="current_product" xsi:type="helper" helper="Magento\Catalog\Helper\Data::getProduct"></argument>
                </arguments>
            </block>
        </referenceContainer>
        <referenceBlock name="product.price.final" remove="true" />
    </body>
</page>
